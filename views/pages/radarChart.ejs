<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Radar Chart</title>
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    
        #chartContainer {
            width: 45%; 
            height: 45%;
        }
    
        canvas {
            width: 100%;
            height: 100%;
        }
    </style>
    
</head>

<body>
    <div id="chartContainer">
        <canvas id="radarChart"></canvas>
    </div>

    <button id="backButton" class="btn btn-primary mt-4">Back to Compare Players</button>

<script>
    const backButton = document.getElementById('backButton');
    backButton.addEventListener('click', () => {
        window.location.href = '/pages/playercompare'; // Redirect to the comparePlayers page
    });
</script>

    <script>
        // Retrieve chart data from the query parameter in the URL
        const urlParams = new URLSearchParams(window.location.search);
        const chartDataString = urlParams.get('chartData');
        const chartData = JSON.parse(decodeURIComponent(chartDataString));

        // Create the radar chart using Chart.js
        const radarChartContext = document.getElementById('radarChart').getContext('2d');
        const radarChart = new Chart(radarChartContext, {
            type: 'radar',
            data: chartData.data,
            options: chartData.options
        });
    </script>
</body>

</html>
