<% layout('layouts/boilerplate', { user_id: user_id })%>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="container mt-3">
                    <h1 class="mb-3 text-center">Register</h1>
                    <form action="/register" method="POST" novalidate class="validated-form">
                        <div class="mb-3">
                            <label for="fName" class="form-label">First Name</label>
                            <input type="text" id="fName" name="user[fName]" class="form-control" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="lName" class="form-label">Last Name</label>
                            <input type="text" id="lName" name="user[lName]" class="form-control" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="user[email]" class="form-control" required>
                            <div class="invalid-feedback">
                                Please enter a valid email address
                            </div>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" id="password" name="user[password]" class="form-control" required minlength="8">
                                <button type="button" id="togglePassword" class="btn btn-outline-secondary" onclick="togglePasswordVisibility()">Show</button>
                            </div>                                  <div class="invalid-feedback">
                                Password must contain at least 8 characters
                            </div>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src='../../utils/togglePasswordVisibility.js'></script>
